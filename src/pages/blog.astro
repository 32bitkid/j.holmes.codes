---
import { blogSorting } from "../utils/blogSorting";
import { getCollection } from 'astro:content';
import Page from "@layouts/page.astro";
import BlogItem from "../components/BlogItem.astro";

const allBlogPosts =
  (await getCollection(
    'blog',
    ({ data }) => (import.meta.env.PROD) ? data.pubDate !== undefined : true,
  ))
  .sort(blogSorting);
---
<Page title="Blog" description="A collection of thoughts and blog posts by J. Holmes">
    <h1>Thoughts on thoughtsâ€¦</h1>
    <ul class="posts">
        {allBlogPosts.map((blog, i) => <BlogItem blog={blog} showSummary={i < 5} highlight={i < 5} />)}
    </ul>
</Page>

<style>
    h1 {
        margin-block-end: var(--line-height);
    }

    .posts {
        display: grid;
        grid-gap: 2rem 2rem;
    }

    @media screen and (min-width: 45rem) {
        .posts {
            grid-template-columns: 1fr 1fr 1fr;
        }

        .posts :global(li:nth-child(-n+5)) {
            grid-column: 1 / -1;
        }
    }

</style>