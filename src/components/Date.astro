---
import { format } from "date-fns";
import { parseDate } from "./parseDate";
const { date: inputDate, day = true, month = true } = Astro.props;
const formatStr = !month
  ? "yyyy"
  : !day
  ? "MMM yyyy"
  : "MMM d, yyyy";

const dt = parseDate(inputDate);
const date = new Date(dt.valueOf() + dt.getTimezoneOffset() * 60 * 1000)
---
<style>
    time {
        font-variant-numeric: tabular-nums oldstyle-nums;
    }
</style>
<time datetime={date.toISOString()}>{format(date, formatStr)}</time>