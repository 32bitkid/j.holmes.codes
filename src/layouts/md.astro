---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Meta from '../components/Meta.astro';

import '@styles/reset.css';
import '@styles/font.css';
import '@styles/core.css';
---

<html lang="en">
  <head><Meta {...Astro.props} /></head>
  <body>
    <Header />
    <main><slot /></main>
    <Footer />
  </body>
</html>

<style>
  body {
    display: grid;
    min-height: calc(100vh - 1.5rlh);
    grid-template-rows: 1fr min-content;
    justify-items: stretch;
    align-items: stretch;
  }

  main {
    width: 100%;
    box-sizing: border-box;
    justify-self: center;
    max-width: var(--max-content);
    padding-inline: 1.5ch;
  }

  main :global(ol, ul) {
    margin-block: 1rlh;
    padding-inline-start: 1.25rlh;
  }

  main :global(ol) {
    list-style-type: decimal;
  }

  main :global(ul.contains-task-list ul.contains-task-list) {
    margin-block: 0.5rlh;
  }

  main :global(ul:not(.contains-task-list)) {
    list-style-type: square;
  }

  main :global(li) {
    margin-block: 0.25rlh;
  }

  main :global(dl) {
    display: grid;
    grid-template-columns: fit-content(12ch) 1fr;
    gap: 0.125rlh 1ch;
    margin-inline: 1ch;
    margin-block: 1rlh;
  }

  main :global(dl > dt) {
    grid-column: 1 / span 1;
    font-family: 'Equity Caps B', serif;
    letter-spacing: -0.04em;
    font-feature-settings: 'smcp', 'onum';
    font-size: var(--f-small);
    line-height: 1;
    text-align: end;
    justify-self: end;
    align-self: first baseline;
  }

  main :global(dl > dd:has(+ dt)) {
    margin-block-end: 0.5rlh;
  }

  main :global(dl > dt::after) {
    content: '';
  }

  main :global(dl > dd) {
    grid-column: 2 / span 1;
    align-self: first baseline;
  }

  main :global(blockquote, q) {
    quotes: '“' '”' '‘' '’';
  }

  main :global(blockquote) {
    max-width: 70%;
    min-width: 15rem;
    margin-inline: auto;
  }

  main :global(blockquote p:first-of-type::before) {
    content: open-quote;
  }
  main :global(blockquote p:last-of-type::after) {
    content: close-quote;
  }

  main :global(figure blockquote ~ figcaption) {
    margin-inline: auto;
    max-width: 70%;
    min-width: 15rem;
    text-align: right;
  }

  main :global(figure blockquote ~ figcaption::before) {
    content: '\2014';
  }
</style>
